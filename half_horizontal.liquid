{% if has_launch %}
<div class="layout layout--col layout--top gap--xsmall" id="launchpadApp">

  <div class="flex flex--row flex--y-end w--full value--xxsmall">
    <div class="no-shrink font--normal flex gap flex--center-y value--xxsmall">
      <i class="hgi hgi-stroke hgi-time-01 value--small"></i> 
      <div class="mt--1">{{ launch_date }} - {{ launch_time_display }}</div>
    </div>
    <div class="stretch"></div>
    <div class="outline text--black py--1 px--2 rounded--xsmall">
      {{ launch_status }}
    </div>
    <div class="bg--black text--white py--1 px--2 rounded--xsmall no-shrink">{{ countdown_label }}</div>
  </div>

  <div class="w--full">
    <div data-value-fit="true" class="stretch title--overflow value--small font--bold">{{ launch_name }} </div>
    <div class="mt--2 value--xxsmall">By {{ provider_name}}</div>
  </div>

  <div class="value--xxsmall mt--1 font--normal body-text w-full title--overflow text--gray-30">
    {{ mission_description | truncate: 160 }}
  </div>

  <div class="grid grid--cols-2 gap--large bg--black text--white p--4 rounded">
    <div class="value--xxsmall flex flex--center-y">
      <i class="hgi hgi-stroke hgi-rocket"></i> {{ rocket_name | truncate: 40  }}
    </div>

    <div class="value--xxsmall flex flex--center-y">
      <i class="hgi hgi-stroke hgi-rocket-02"></i> {{ pad_name | truncate: 40 }}
    </div>

    <div class="value--xxsmall flex flex--center-y">
      <i class="hgi hgi-stroke hgi-location-06"></i> {{ location_name | truncate: 35  }}
    </div>

    <div class="value--xxsmall flex flex--center-y">
      <i class="hgi hgi-stroke hgi-saturn-02"></i> {{ mission_orbit | truncate: 40 }}
    </div>
  </div>

</div>
{% endif %}
